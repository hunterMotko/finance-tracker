<div class="container">
<div class="row">
    <div class="col">
      <table class="table table-dark table-hover">
        <thead>
          <tr class="text-canter m-3">
            <h1>Asset List</h1>
          </tr>
          <tr>
            <th>Symbol</th>
            <th>Name</th>
            <th>Type</th>
            <th>URL</th>
          </tr>
        </thead>
        <tbody>
          <% @assets.each do |coin| %>
            <tr>
              <td><%= coin["symbol"] %></td>
              <td><%= coin["name"] %></td>
              <td><%= coin["type"] %></td>
              <td><%= link_to coin["url"], coin["url"] if coin["url"]%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <% @length.times do |i| %>
            <li class="page-item">
              <%= link_to "#{i + 1}", assets_path(page: ((i + 1) * 100)), class: "page-link" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>