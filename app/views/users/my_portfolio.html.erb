<h1 class="text-center">My Portfolio</h1>

<div class="m-3">
  <h3 class="text-center">Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row justify-content-center">
      <div class="col-9">
        <div class="input-group">
          <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg' %>
          <%= button_tag tpye: :submit, class: 'btn btn-success' do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% unless @tracked_stocks.empty? %>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td><%= stock.price %></td>
        <td>some stuff</td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>